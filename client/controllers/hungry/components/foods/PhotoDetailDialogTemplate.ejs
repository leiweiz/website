<md-dialog aria-label="Food Detail" ng-cloak flex="66">
    <form>
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2>{{photo.food_name}}</h2>
                <span flex></span>
                <md-button class="md-icon-button" ng-click="cancel()">
                    <md-icon md-svg-src="/icons/close.svg" aria-label="Close dialog"></md-icon>
                </md-button>
            </div>
        </md-toolbar>
        <md-dialog-content>
            <div class="md-dialog-content">
                <img style="margin: auto; max-width: 100%;" alt="Lush mango tree" ng-src="/images/{{photo.file_name}}">
                <p>
                    {{photo.description}}
                </p>
                <md-divider></md-divider>
                <!--comments-->
                <md-list class="md-dense" flex>
                    <!--<md-subheader class="md-no-sticky">Reviews</md-subheader>-->
                    <md-list-item class="md-3-line" ng-repeat="comment in comments">
                        <img class="md-avatar" ng-src="/avatars/{{comment.user_info.avatar}}" alt="{{comment.user_info.avatar}}"/>
                        <div class="md-list-item-text" layout="column">
                            <h3>{{comment.user_info.first_name}} {{comment.user_info.last_name}}</h3>
                            <!--<h4>time</h4>-->
                            <p>{{comment.content}}</p>
                        </div>
                    </md-list-item>
                </md-list>
            </div>
        </md-dialog-content>
        <md-dialog-actions layout="row">
            <md-input-container class=" md-block" flex>
                <label>Comment</label>
                <input type="text" ng-model="userComment">
            </md-input-container>
            <md-button class="md-raised md-primary" ng-click="commentOnPhoto()">
                <md-icon md-svg-src="/icons/comment.svg"></md-icon>
            </md-button>
            <md-button md-autofocus class="md-raised md-primary">
                Order
            </md-button>
        </md-dialog-actions>
    </form>
</md-dialog>