    <md-card flex-gt-sm="40" ng-repeat="photo in photos">
        <md-card-header>
            <md-card-avatar>
                <img class="md-user-avatar" ng-src="/avatars/{{photo.user.avatar}}"/>
            </md-card-avatar>
            <md-card-header-text>
                <span class="md-title">{{photo.user.first_name}} {{photo.user.last_name}}</span>
                <span class="md-subhead">{{photo.user.address.address}}</span>
            </md-card-header-text>
        </md-card-header>
        <img ng-src="/images/{{photo.file_name}}" class="md-card-image" alt="{{photo.file_name}}">
        <md-card-title>
            <md-card-title-text>
                <span class="md-headline">{{photo.food_name}}</span>
            </md-card-title-text>
        </md-card-title>
        <md-card-content>
            <p>
                {{photo.description}}
            </p>
        </md-card-content>
        <md-card-actions layout="row" layout-align="start center">
            <md-card-icon-actions>
                <md-button class="md-icon-button" aria-label="Favorite">
                    <md-icon md-svg-icon="/icons/favorite.svg"></md-icon>
                </md-button>
                <md-button class="md-icon-button" aria-label="Share">
                    <md-icon md-svg-icon="/icons/share.svg"></md-icon>
                </md-button>
            </md-card-icon-actions>
            <md-button>Action 1</md-button>
        </md-card-actions>
    </md-card>
