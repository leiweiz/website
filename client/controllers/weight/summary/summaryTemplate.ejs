<div flex layout="row" layout-align="center">
    <md-card flex-xs="100" flex="60">
        <md-toolbar class="md-table-toolbar md-default">
            <div class="md-toolbar-tools" layout="row">
                <span flex>Summary</span>
                <span ng-class="{ 'goodStatus': summaryData.currentWeight - summaryData.originWeight <= 0,
                 'warningStatus': summaryData.currentWeight - summaryData.originWeight > 0}">
                    {{summaryData.currentWeight - summaryData.originWeight}}
                </span>
            </div>
        </md-toolbar>

        <md-menu-content>
            <md-menu-item>
                <div layout="row" flex>
                    <p flex>Original Weight</p>
                    <p>{{summaryData.originWeight}} kg</p>
                </div>
            </md-menu-item>
            <md-menu-item>
                <div layout="row" flex>
                    <p flex>Current Weight</p>
                    <p>{{summaryData.currentWeight}} kg</p>
                </div>
            </md-menu-item>
            <md-menu-item>
                <div layout="row" flex>
                    <p flex>Goal Weight</p>
                    <p>{{summaryData.goalWeight}} kg</p>
                </div>
            </md-menu-item>
        </md-menu-content>
    </md-card>
</div>